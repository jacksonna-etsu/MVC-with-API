@model NathanielJacksonAssignment2.Models.Entities.FlightUser

<h4>Update Flight Class for @Model!.User!.UserName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFlightClass" id="formUpdateFlightClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="flightUserId" value="@Model!.Id" />
            <input type="hidden" name="flightId" value="@Model!.Flight!.Id" />
            <div class="form-group">
                <label asp-for="FlightClass" class="control-label"></label>
                <select asp-for="FlightClass" class="form-select">
                    <option value="Economy">Economy</option>
                    <option value="Standard">Standard</option>
                    <option value="Business">Business</option>
                    <option value="VIP">VIP</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="flight" asp-route-id="@Model!.Flight!.Id">Back to List</a>
</div>

@section Scripts{
    <script defer src="~/js/FlightUserChangeFlightClass.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

